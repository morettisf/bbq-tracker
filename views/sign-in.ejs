<!DOCTYPE html>
<html>
<head>
  <%- include header.ejs -%>
  <title><%= title %></title>
</head>
<body>
  <%- include nav.ejs -%>
  <main id='sign-in-main'>
    <% if (message) { %>
    <div class='message'><%= message %></div>
    <% } %>
    <% if (errors) { %>
      <div class='error'><%= errors %></div>
    <% } %>
    <section id='sign-in'>
      <h1>Sign In</h1>
      <a href="/auth/facebook"><img id='fb-login' src='/images/facebook-login.png'></a>
      <div id='or'>Or</div>
      <form id='sign-in-form' action='/sign-in' method='post'>
        <input id='sign-email' type='text' for='username' name='username' placeholder='Username' required>
        <input id='sign-pw' type='password' for='password' name='password' placeholder='Password' required>
        <input id='sign-in-btn' type='submit' for='submit' value='Submit'>
      </form>
      <a href='/forgot'><p>Forgot username or password?</p></a>
      <div id='demo'>
        <h3>Demo Account</h3>
        <div id='demo-box'> 
          <div><strong>Username:</strong>  demo</div>
          <div><strong>Password:</strong>  12345</div>
        </div>
      </div>
    </section>
  </main>
  <%- include footer.ejs -%>
</body>
</html>