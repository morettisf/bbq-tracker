<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" type="text/css" href='../css/main.css'>
    <link href='https://fonts.googleapis.com/css?family=Architects+Daughter|Roboto+Slab' rel='stylesheet'>
    <title><%= title %></title>
  </head>
  <body>
    <%- include header.ejs -%>
    <main id='reg-main'>
      <% if (errors) { %>
      <% errors.forEach(function(error) { %>
        <div class='error'><%= error %></div>
      <% }) %>
      <% } %>
      <h1>Register an Account</h1>
      <section id='register'>
        <form id='register-form' action='/register' method='post'>
          <label for='username'>Username</label>
          <input id='reg-username' type='text' for='username' name='username' placeholder='BBQ123'>
          <label for='email'>Email</label>
          <input id='reg-email' type='text' for='email' name='email' placeholder='you@email.com'>
          <label for='password'>Password</label>
          <input id='reg-pw' type='password' for='password' name='password'>
          <label for='confirm password'>Confirm Password</label>
          <input id='reg-pw2' type='password' for='confirmpassword' name='password2'>
          <input id='reg-btn' type='submit' for='submit' value='Submit'>
        </form>
      </section>
    </main>
    <script src='js/bundle.js'></script>
  </body>
</html>