<!DOCTYPE html>
<html>
<head>
  <%- include header.ejs -%>
  <title><%= title %></title>
</head>
<body>
  <%- include nav.ejs -%>
  <main id='reg-main'>
    <% if (errors) { %>
    <% errors.forEach(function(error) { %>
      <div class='error'><%= error %></div>
    <% }) %>
    <% } %>
    <section id='register'>
      <h1>Register Account</h1>
      <a href="/auth/facebook"><img id='fb-login' src='/images/facebook-login.png'></a>
      <div id='or'>Or</div>
      <form id='register-form' action='/register' method='post'>
        <input id='reg-username' type='text' for='username' name='username' placeholder='Username' required>
        <input id='reg-email' type='text' for='email' name='email' placeholder='Email' required>
        <input id='reg-pw' type='password' for='password' name='password' placeholder="Password" required>
        <input id='reg-pw2' type='password' for='confirmpassword' name='password2' placeholder="Confirm Password" required>
        <input id='reg-btn' type='submit' for='submit' value='Submit'>
      </form>
    </section>
  </main>
  <%- include footer.ejs -%>
</body>
</html>